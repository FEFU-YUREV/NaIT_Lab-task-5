mixin createMenu(menu, active)
    each value, key in menu
        if active == key
            a.active(href= value)= key
        else
            a(href= value)= key

mixin createSection(item)
    section
        h3= item.header
        img(src= require("../images/" + item.image))
        p= item.text
            a(href="#") &hellip;

mixin createMenuBuild(menu, active)
    each value, key in menu
        a(href= value)= key
        
        if key == 'Главная'
            a.active(href="#")= active
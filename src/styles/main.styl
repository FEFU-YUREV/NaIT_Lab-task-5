back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding: size + "%"
  margin 0 0 1% 0
  box-sizing border-box

colorText = #6f6d6d

html
  color colorText

nav
  back(0)
  text-align right
  & a
    display inline-block
    padding 1%
    color colorText
    text-decoration: none
    &:hover
    &.active
      background-color #f87777
      color #f8f8f8      

div.images
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-gap 0.5%
  back(1)
  overflow hidden
  height auto
  
  & img
    width 100%
    height auto
    display block
    object-fit cover

article
  width 80%
  margin auto
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-gap 4%
  
  & section
    display grid
    grid-template-columns 1fr 2fr 
    grid-gap 2%
    align-items center
    back(2)
    
    & h3
      grid-column 1/3
      margin 0
      text-align center
      margin-bottom 10px

    & img
      width: 100%
      object-fit cover 

footer
  background-color #333333
  color #ffffff
  padding 1%
  text-align left
  margin-top 0 

  & h4
    margin 0
    font-weight normal 

div.structure-content
  margin 20px auto
  padding 2% 

  & img.big
    display block
    width 50%      
    max-width 450px 
    height auto
    margin 0 auto 30px auto 
    object-fit cover

  & section
    display grid
    grid-template-columns 1fr 1fr 
    grid-gap 4%     
    text-align left 
    align-items start
    
    & p
      margin 0
      line-height 1.5
      text-align justify 

@media (max-width: 600px)
  div.images
    grid-template-columns 1fr
    margin-bottom 20px 
  
  article
    width 100%
    grid-template-columns 1fr
    margin 0 auto 
    
    padding-bottom 100px 
    
    & section
      grid-template-columns 1fr 2fr 
      
      & h3
        grid-column 1/3 
      
      & img
        width 100%
  
  div.structure-content
    width 96% 
    
    & img.big
      width 100% 
      
    & section
      grid-template-columns 1fr 
      grid-gap 20px